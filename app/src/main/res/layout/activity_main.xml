<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mons.sudoku.MainActivity">

    <GridView
        android:layout_width="match_parent"
        android:id="@+id/myGridView"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:numColumns="9"
        android:background="#e5e5e5"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#fff"
        android:background="#3d44af"
        android:id="@+id/new_game_button" />

    <Button
        android:text="2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_1"
        android:layout_toEndOf="@+id/button_1" />

    <Button
        android:text="3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_2"
        android:layout_toEndOf="@+id/button_2" />

    <Button
        android:text="4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_3"
        android:layout_toEndOf="@+id/button_3" />

    <Button
        android:text="6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_6"
        android:layout_above="@+id/myGridView"
        android:layout_alignLeft="@+id/button_1"
        android:layout_alignStart="@+id/button_1" />

    <Button
        android:text="7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_7"
        android:layout_above="@+id/myGridView"
        android:layout_toRightOf="@+id/button_1"
        android:layout_toEndOf="@+id/button_1" />

    <Button
        android:text="8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_8"
        android:layout_above="@+id/myGridView"
        android:layout_toRightOf="@+id/button_2"
        android:layout_toEndOf="@+id/button_2" />

    <Button
        android:text="9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_9"
        android:layout_above="@+id/myGridView"
        android:layout_toRightOf="@+id/button_3"
        android:layout_toEndOf="@+id/button_3" />

    <Button
        android:text="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/new_game_button"
        android:layout_toEndOf="@+id/new_game_button"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:text="5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_4"
        android:layout_toEndOf="@+id/button_4" />

</RelativeLayout>
